@using Entity.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Status</th>
            <th>Pasif Yap</th>
            <th>Yetkisini Değiştir</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AdminID</th>
                <td>@item.AdminUserName</td>
                <td>@item.AdminRole</td>
                <td>Aktif</td>
                <td class="text-center"><a href="/AdminCategory/EditCategory/@item.AdminID" class="btn btn-success">Pasif Yap</a></td>
                <td class="text-center"><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-outline-warning">Yetkisini Değiştir</a></td>
            </tr>
        }
    </table>
    <a href="/Authorization/AddAdmin" class="btn btn-primary">Yeni Admin Tanımla</a>
</div>

